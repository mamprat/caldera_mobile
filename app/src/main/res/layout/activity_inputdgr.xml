<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".activity_inputdgr">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gambar1"
        android:id="@+id/inputdgr_round"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logout"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/inputdgr_round"
        android:id="@+id/input_button_logout"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="DGR Data Logger"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_below="@+id/inputdgr_round"
        android:id="@+id/inputdgr_title_dgr"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        android:text="Waktu Pengecekan"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_below="@+id/inputdgr_title_dgr"
        android:id="@+id/inputdgr_title_waktu"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@+id/inputdgr_title_waktu"
        android:id="@+id/inputdgr_ly_waktu"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:hint="Masukan waktu"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_waktu"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="BIO"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_below="@id/inputdgr_ly_waktu"
        android:id="@+id/inputdgr_txt_bio"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/inputdgr_txt_bio"
        android:id="@+id/inputdgr_ly_bio"
        >
        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:hint="Nilai pH"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_bioph"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Nilai Suhu"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_biosuhu"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:hint="Masukan"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_biomasukan"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Water"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_below="@id/inputdgr_ly_bio"
        android:id="@+id/inputdgr_txt_water"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/inputdgr_txt_water"
        android:id="@+id/inputdgr_ly_water"
        >
        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:hint="Nilai pH"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_waterph"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Nilai Suhu"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_watersuhu"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:hint="Masukan"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_watermasukan"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Acid"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_below="@id/inputdgr_ly_water"
        android:id="@+id/inputdgr_txt_acid"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/inputdgr_txt_acid"
        android:id="@+id/inputdgr_ly_acid"
        >
        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:hint="Nilai pH"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_acidph"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="Nilai Suhu"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_acidsuhu"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:textAlignment="center"
            android:hint="Masukan"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_acidmasukan"
            />
    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Simpan"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:layout_below="@id/inputdgr_ly_acid"
        android:id="@+id/inputdgr_button_simpan"
        />
</RelativeLayout>