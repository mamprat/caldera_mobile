<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:backgroundTint="@color/white">

    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="35dp"
        android:text="Selamat Datang"
        android:textSize="32dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:id="@+id/menu_txt_1"
        />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/background_outline"
        android:layout_below="@+id/menu_txt_1"
        android:padding="30dp"
        android:id="@+id/menu_ly_1"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_list"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/menu_ic_back_1"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_history"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/menu_ic_back_2"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logout"
        android:layout_below="@+id/menu_ly_1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/menu_ic_logout"
        />

</RelativeLayout>

