<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_water">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/gambar1"
        android:id="@+id/water_round"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="@string/riwayat_water"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_below="@+id/water_round"
        android:id="@+id/water_title_historywater"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/water_title_historywater"
        android:id="@+id/water_ly_title_tanggal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginEnd="30dp"
            android:text="@string/tanggal_awal"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="14sp"
            android:id="@+id/water_title_awal"
            />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/strip"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsbold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:text="@string/tanggal_akhir"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="14sp"
            android:id="@+id/water_title_akhir"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/water_ly_title_tanggal"
        android:id="@+id/water_ly_history"
        >

        <EditText
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginEnd="25dp"
            android:hint="@string/awal"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:autofillHints="awal"
            android:inputType="text"
            android:id="@+id/water_awal"
            />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/strip"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinsbold"
            android:autofillHints="strip"
            android:inputType="text"
            />

        <EditText
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginStart="25dp"
            android:hint="@string/akhir"
            android:background="@drawable/background_outline"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:autofillHints="akhir"
            android:inputType="text"
            android:id="@+id/water_akhir"
            />
    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/cari"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:layout_below="@id/water_ly_title_tanggal"
        android:id="@+id/water_button_cari"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/water_button_cari"
        android:id="@+id/water_scr_water"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            >
            <TableRow
                android:background="@color/graySecondary"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/water_tb_title"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:id="@+id/water_title_date"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:textAlignment="center"
                    android:text="@string/before_water"
                    android:fontFamily="@font/poppinsbold"
                    android:id="@+id/water_title_beforewater"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="45dp"
                    android:textAlignment="center"
                    android:text="@string/after_water"
                    android:fontFamily="@font/poppinsbold"
                    android:id="@+id/water_title_afterwater"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:textAlignment="center"
                    android:text="@string/before_temp"
                    android:fontFamily="@font/poppinsbold"
                    android:id="@+id/water_title_beforetemp"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:textAlignment="center"
                    android:text="@string/after_temp"
                    android:fontFamily="@font/poppinsbold"
                    android:id="@+id/water_title_aftertemp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:text="@string/add"
                    android:fontFamily="@font/poppinsbold"
                    android:id="@+id/water_title_add"
                    />

            </TableRow>
            <TableRow
                android:padding="5dp"
                android:background="@drawable/background_outline_square"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/water_tabel_1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_tanggal_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforeph_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_aterph_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforetemp_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_atertemp_1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_add_1"
                    />
            </TableRow>

            <TableRow
                android:padding="5dp"
                android:background="@drawable/background_outline_square"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/water_tabel_2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_tanggal_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforeph_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_aterph_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforetemp_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_atertemp_2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_add_2"
                    />
            </TableRow>

            <TableRow
                android:padding="5dp"
                android:background="@drawable/background_outline_square"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/water_tabel_3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_tanggal_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforeph_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_aterph_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforetemp_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_atertemp_3"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_add_3"
                    />
            </TableRow>

            <TableRow
                android:padding="5dp"
                android:background="@drawable/background_outline_square"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/water_tabel_4"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_tanggal_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforeph_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_aterph_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforetemp_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_atertemp_4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_add_4"
                    />
            </TableRow>

            <TableRow
                android:padding="5dp"
                android:background="@drawable/background_outline_square"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/water_tabel_5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_tanggal_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforeph_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_aterph_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_beforetemp_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_atertemp_5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsregular"
                    android:id="@+id/water_tabel_add_5"
                    />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/water_scr_water"
        android:id="@+id/water_simbol"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/menu"
            android:textAlignment="center"
            android:id="@+id/water_menu"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/ic_right"
            android:contentDescription="@string/lanjut"
            android:textAlignment="center"
            android:id="@+id/water_water"
            />
    </LinearLayout>

</RelativeLayout>