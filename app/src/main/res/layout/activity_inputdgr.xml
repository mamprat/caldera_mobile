<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_inputdgr"
    android:backgroundTint="@color/white">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/gambar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/inputdgr_img_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputdgr_img_1"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="DGR Data Logger"
        android:textSize="32dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:id="@+id/inputdgr_text_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputdgr_text_1"
        android:layout_marginStart="45dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsregular"
        android:text="Waktu Pengecekan"
        android:id="@+id/inputdgr_judul_waktu"
        />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/inputdgr_judul_waktu"
        android:id="@+id/ly_inputdgr_1"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Masukan waktu"
            android:background="@drawable/background_outline"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_waktu"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_inputdgr_1"
        android:text="BIO"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:id="@+id/inputdgr_txt_bio"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/inputdgr_txt_bio"
        android:id="@+id/ly_inputdgr_2"
        >
        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:hint="Nilai pH"
            android:background="@drawable/background_outline"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_bioph"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:hint="Nilai suhu"
            android:background="@drawable/background_outline"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_biosuhu"
            />

        <EditText
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="24dp"
            android:hint="Masukan"
            android:background="@drawable/background_outline"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:id="@+id/inputdgr_txt_bioadd"
            />
    </LinearLayout>











</RelativeLayout>